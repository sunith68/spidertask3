<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>View</title>
	<link rel="stylesheet" type="text/css" href="/style1.css">
</head>
<body>
	<%- include('./partials/sellertop.ejs'); %>
	<div class='view2'>
		<div class='viewtxt'>Purchase History</div>
		<%if(history.length!=0){%>
		<table id='table1'>
		  <tr>
		    <th>Purchased by</th>
		    <th>Email</th>
		    <th>Quantity</th>
		    <th>Purchased on</th>
		  </tr>
		<% history.forEach(function(user){ %>
			<tr>
				<td><%= user.username %></td>
				<td><%= user.email %></td>
				<td><%=user.quantity%></td>
				<td class="date1"><%=user.date%></td>
			</tr>
		<% }) %>
		</table>
		<%}%>
		<%if(history.length==0){%>
			<div class='nomsg'>No Purchases yet :(</div>
		<%}%>
		<button class='btn2' onclick="url1()">Details</button>
	</div>
	<script>
		document.querySelectorAll('.date1').forEach((d)=>{
			var t1=new Date(d.innerText);
			d.innerText=t1.getDate()+'/'+(t1.getMonth()+1)+'/'+t1.getFullYear();
		})
		function url1(){
			var url = window.location.href;
			console.log(url);
			url=url.replace('/history/','/');
			console.log(url);
			window.location.href=url;
		}
	</script>
</body>
</html>
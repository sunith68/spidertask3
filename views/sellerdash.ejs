<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Dashboard</title>
	<link rel="stylesheet" type="text/css" href="style1.css">
	<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
</head>
<body>
	<%- include('./partials/sellertop.ejs'); %>
	<div>
		<% if (messages.msg) { %>
			<%= messages.msg %>
		<% } %>
	</div>
	<div class="container1">
		<div class="title1">My Items</div>
		<%if(items.length!=0){%>
		<div class='sortopt'>
			<select id='sortselect'>
				<option disabled selected hidden>Sort by</option>
				<option>Ascending</option>
				<option>Descending</option>
			</select>
		</div>
		<%}%>
		<div id='qwe'>
		<% items.forEach(function(item){ %>
			<div class="card">
				<div><img src="<%= item.image %>" alt="Image not found"></div>
				<h2 class='name1'><%=item.name%></h2>
				<a href="/update/<%=item.id%>" class="btn2">Update</a>
				<a href="/details/<%=item.id%>" class="btn2">View Details</a>
			</div>
		<% }) %>
		</div>
		<%if(items.length==0){%>
			<div class='nomsg'>You haven't added any items..</div>
		<%}%>
	</div>
	<script src="/js/sort.js"></script>
</body>
</html>